{
    "macOS": {
        "description": "Installing ABK tool set for MacOS",
        "supported_versions": {
            "macOS": ["13", "14", "15", "26"]
        },
        "update_packages": ["brew update", "brew upgrade", "brew cleanup", "brew missing"],
        "tools": {
            "descriptions": {
                "cline": "Cline - An AI model switcher, can interact with Claude, Ollama, ...",
                "git": "Distributed version control system for tracking changes in source code",
                "jq": "Command-line JSON processor for parsing, filtering and transforming JSON data",
                "kilocode": "Kilo Code CLI - AI orchestration tool in the CLI",
                "oh-my-posh": "Cross-platform prompt theme engine for any shell with customizable themes",
                "ollama": "Local free LLM. Create, run, and share large language models (LLMs)",
                "wget": "Command-line utility for downloading files from web servers via HTTP/HTTPS/FTP",
                "yq": "Command-line YAML processor - the YAML equivalent of jq for parsing and manipulating YAML",
                "zsh-autocomplete": "Real-time type-ahead autocompletion for Zsh with intelligent suggestions",
                "zsh-autosuggestions": "Fish-like autosuggestions for Zsh based on command history",
                "zsh-syntax-highlighting": "Fish shell-like syntax highlighting for Zsh commands as you type"
            },
            "check": {
                "cline": ["command -v cline"],
                "git": ["command -v git"],
                "jq": ["command -v jq"],
                "kilocode": ["command -v kilocode"],
                "oh-my-posh": ["brew list | grep oh-my-posh"],
                "ollama": ["command -v ollama"],
                "wget": ["command -v wget"],
                "yq": ["command -v yq"],
                "zsh-autocomplete": ["brew list | grep zsh-autocomplete"],
                "zsh-autosuggestions": ["brew list | grep zsh-autosuggestions"],
                "zsh-syntax-highlighting": ["brew list | grep zsh-syntax-highlighting"]
            },
            "install": {
                "cline": ["npm install -g cline"],
                "git": ["brew install git"],
                "jq": ["brew install jq"],
                "kilocode": ["npm install -g @kilocode/cli"],
                "oh-my-posh": [
                    "brew install oh-my-posh",
                    "oh-my-posh init $ABK_SHELL",
                    "(cd unixBin/env && ln -s XXX_oh-my-posh.env LINK_oh-my-posh.env)"
                ],
                "ollama": [
                    "brew install ollama",
                    "brew services start ollama"
                ],
                "wget": ["brew install wget"],
                "yq": ["brew install yq"],
                "zsh-autocomplete": [
                    "brew install zsh-autocomplete",
                    "(cd unixBin/env && [ ! -L LINK_zsh_plugins.env ] && ln -s XXX_zsh_plugins.env LINK_zsh_plugins.env || true)"
                ],
                "zsh-autosuggestions": [
                    "brew install zsh-autosuggestions",
                    "(cd unixBin/env && [ ! -L LINK_zsh_plugins.env ] && ln -s XXX_zsh_plugins.env LINK_zsh_plugins.env || true)"
                ],
                "zsh-syntax-highlighting": [
                    "brew install zsh-syntax-highlighting",
                    "(cd unixBin/env && [ ! -L LINK_zsh_plugins.env ] && ln -s XXX_zsh_plugins.env LINK_zsh_plugins.env || true)"
                ]
            },
            "uninstall": {
                "cline": ["npm uninstall -g cline"],
                "git": ["brew uninstall git"],
                "jq": ["brew uninstall jq"],
                "kilocode": ["npm uninstall -g @kilocode/cli"],
                "oh-my-posh": [
                    "find ./unixBin/env -type l -name 'LINK_oh-my-posh.env' -delete",
                    "brew uninstall oh-my-posh"
                ],
                "ollama": [
                    "brew services stop ollama",
                    "brew uninstall ollama"
                ],
                "wget": ["brew uninstall wget"],
                "yq": ["brew uninstall yq"],
                "zsh-autocomplete": [
                    "find ./unixBin/env -type l -name 'LINK_zsh_plugins.env' -delete",
                    "brew uninstall zsh-autocomplete"
                ],
                "zsh-autosuggestions": [
                    "find ./unixBin/env -type l -name 'LINK_zsh_plugins.env' -delete",
                    "brew uninstall zsh-autosuggestions"
                ],
                "zsh-syntax-highlighting": [
                    "find ./unixBin/env -type l -name 'LINK_zsh_plugins.env' -delete",
                    "brew uninstall zsh-syntax-highlighting"
                ]
            }
        },
        "apps": {
            "descriptions": {
                "claude-code": "Claude Code - Anthropic's official for Claude AI"
            },
            "check": {
                "claude-code": ["brew list --cask | grep ^claude-code$"]
            },
            "install": {
                "claude-code": ["brew install --cask claude-code"]
            },
            "uninstall": {
                "claude-code": ["brew uninstall --cask claude-code"]
            }
        },
        "fonts": {
            "check": {
            },
            "install": {
            },
            "uninstall": {
            }
        }
    },
    "linux": {
        "debian": {
            "description": "Installing ABK tool set for Linux / Debian based distro",
            "supported_versions": {
                "debian": ["11", "12", "13"],
                "raspbian": ["11", "12", "13"],
                "ubuntu": ["22.04", "24.04"]
            },
            "update_packages": ["sudo apt update", "sudo apt upgrade -y", "sudo apt dist-upgrade -y"],
            "tools": {
                "descriptions": {
                    "claude": "Claude Code CLI - Anthropic's official command-line interface for Claude AI",
                    "cline": "Cline - An AI model switcher, can interact with Claude, Ollama, ...",
                    "git": "Distributed version control system for tracking changes in source code",
                    "jq": "Command-line JSON processor for parsing, filtering and transforming JSON data",
                    "kilocode": "Kilo Code CLI - AI orchestration tool in the CLI",
                    "oh-my-posh": "Cross-platform prompt theme engine for any shell with customizable themes",
                    "ollama": "Local free LLM. Create, run, and share large language models (LLMs)",
                    "wget": "Command-line utility for downloading files from web servers via HTTP/HTTPS/FTP",
                    "yq": "Command-line YAML processor - the YAML equivalent of jq for parsing and manipulating YAML",
                    "xclip": "Multi copy clipboard",
                    "zsh-autosuggestions": "Fish-like autosuggestions for Zsh based on command history",
                    "zsh-syntax-highlighting": "Fish shell-like syntax highlighting for Zsh commands as you type"
                },
                "check": {
                    "claude": ["command -v claude"],
                    "cline": ["command -v cline"],
                    "git": ["command -v git"],
                    "jq": ["command -v jq"],
                    "kilocode": ["command -v kilocode"],
                    "mplayer": ["command -v mplayer"],
                    "oh-my-posh": ["command -v ./unixBin/oh-my-posh"],
                    "ollama": ["command -v ollama"],
                    "wget": ["command -v wget"],
                    "yq": ["command -v yq"],
                    "xclip": ["command -v xclip"],
                    "zsh-autosuggestions": ["apt list --installed | grep zsh-autosuggestions"],
                    "zsh-syntax-highlighting": ["apt list --installed | grep zsh-syntax-highlighting"]
                },
                "install": {
                    "claude": ["curl -fsSL https://claude.ai/install.sh | bash"],
                    "cline": ["npm install -g cline"],
                    "git": ["sudo apt install -y git"],
                    "jq": ["sudo apt install -y jq"],
                    "kilocode": ["npm install -g @kilocode/cli"],
                    "mplayer": ["sudo apt install -y mplayer"],
                    "oh-my-posh": [
                        "curl -s https://ohmyposh.dev/install.sh | bash -s -- -d ./unixBin",
                        "./unixBin/oh-my-posh init $ABK_SHELL",
                        "(cd unixBin/env && ln -s XXX_oh-my-posh.env LINK_oh-my-posh.env)"
                    ],
                    "ollama": [
                        "curl -fsSL https://ollama.com/install.sh | sh",
                        "sudo systemctl start ollama",
                        "sudo systemctl status ollama"
                    ],
                    "wget": ["sudo apt install -y wget"],
                    "yq": ["sudo apt install -y yq"],
                    "xclip": ["sudo apt install -y xclip"],
                    "zsh-autosuggestions": [
                        "sudo apt install -y zsh-autosuggestions",
                        "(cd unixBin/env && [ ! -L LINK_zsh_plugins.env ] && ln -s XXX_zsh_plugins.env LINK_zsh_plugins.env || true)"
                    ],
                    "zsh-syntax-highlighting": [
                        "sudo apt install -y zsh-syntax-highlighting",
                        "(cd unixBin/env && [ ! -L LINK_zsh_plugins.env ] && ln -s XXX_zsh_plugins.env LINK_zsh_plugins.env || true)"
                    ]
                },
                "uninstall": {
                    "claude": [
                        "rm -f ~/.local/bin/claude",
                        "rm -rf ~/.local/share/claude",
                        "rm -rf ~/.claude",
                        "rm -f ~/.claude.json"
                    ],
                    "cline": ["npm uninstall -g cline"],
                    "git": ["sudo apt remove -y git"],
                    "jq": ["sudo apt remove -y jq"],
                    "kilocode": ["npm uninstall -g @kilocode/cli"],
                    "mplayer": ["sudo apt remove -y mplayer"],
                    "oh-my-posh": [
                        "find ./unixBin/env -type l -name 'LINK_oh-my-posh.env' -delete",
                        "rm -f ./unixBin/oh-my-posh"
                    ],
                    "ollama": [
                        "sudo systemctl stop ollama",
                        "sudo systemctl disable ollama",
                        "sudo rm -rf /etc/systemd/system/ollama.service",
                        "sudo rm -rf /etc/systemd/system/ollama.service.d",
                        "sudo rm -rf /etc/ollama",
                        "sudo rm -rf /var/lib/ollama"
                    ],
                    "wget": ["sudo apt remove -y wget"],
                    "yq": ["sudo apt remove -y yq"],
                    "xclip": ["sudo apt remove -y xclip"],
                    "zsh-autosuggestions": [
                        "find ./unixBin/env -type l -name 'LINK_zsh_plugins.env' -delete",
                        "sudo apt remove -y zsh-autosuggestions"
                    ],
                    "zsh-syntax-highlighting": [
                        "find ./unixBin/env -type l -name 'LINK_zsh_plugins.env' -delete",
                        "sudo apt remove -y zsh-syntax-highlighting"
                    ]
                }
            },
            "apps": {
                "check": {
                },
                "install":{
                },
                "uninstall": {
                }
            },
            "fonts": {
                "check": {
                },
                "install": {
                },
                "uninstall": {
                }
            }
        }
    }
}
