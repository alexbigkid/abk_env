                "jq": ["command -v jq"],
                "just": ["command -v just"],
                "kind": ["command -v kind"],
                "nmap": ["command -v nmap"],
                "nodenv": ["command -v nodenv"],
                "oh-my-posh": ["brew list | grep oh-my-posh"],
                "parallel": ["command -v parallel"],
                "ruff": ["command -v ruff"],
                "serverless": ["command -v serverless"],
                "shellcheck": ["command -v shellcheck"],
