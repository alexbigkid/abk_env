                "git": ["brew uninstall git"],
                "helm": ["brew uninstall helm"],
                "pass": ["brew uninstall pass"],
                "gpg": ["brew uninstall gnupg"],
                "jq": ["brew uninstall jq"],
                "just": ["brew uninstall just"],
                "kind": ["brew uninstall kind"],
