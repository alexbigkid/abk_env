                "gh": ["brew install gh"],
                "git": ["brew install git"],
                "helm": ["brew install helm"],
                "pass": ["brew install pass"],
                "gpg": ["brew install gnupg"],
                "jq": ["brew install jq"],
                "just": ["brew install just"],
                "kind": ["brew install kind"],
                "nmap": ["brew install nmap"],
                "nodenv": [
