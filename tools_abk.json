                "aws": [
                    "brew install awscli",
                    "(cd unixBin/env && [ ! -L LINK_aws.env ] && ln -s XXX_aws.env LINK_aws.env || true)"
                ],
                "bat": ["brew install bat"],
                "diff-so-fancy": ["brew install diff-so-fancy"],
                "direnv": [
                    "brew install direnv",
                    "(cd unixBin/env && [ ! -L LINK_direnv.env ] && ln -s XXX_direnv.env LINK_direnv.env || true)"
